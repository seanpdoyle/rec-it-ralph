<%= render "card_link", url: location_path(location), class: "space-y-2" do %>
  <div class="flex items-center justify-between">
    <h2 class="font-bold text-xl truncate"><%= location.name %></h2>

    <%= render formats: :svg, partial: "locations/location", locals: { location: location, class: "h-8 w-8" } %>
  </div>

  <div class="flex items-center space-x-2">
    <%= render "users/avatar", avatar: location.creator.avatar, alt: location.creator.name, class: "w-8" %>

    <span class="text-clementine-lighter text-sm">Recommended by <%= location.creator.name %></span>
  </div>
<% end %>
