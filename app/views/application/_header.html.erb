<header class="bg-cream-darker text-white text-sm md:text-base"
        data-controller="custom-property"
        data-custom-property-name-value="--header-height"
        data-custom-property-attribute-value="height">
  <nav class="flex flex-row flex-start md:justify-between items-center px-1 md:px-5 space-x-2">
    <%= link_to root_path, class: "mt-3 mb-2" do %>
      <%= inline_svg_tag "logo-large.svg", class: "h-12 hidden md:block text-clementine" %>
      <%= inline_svg_tag "logo-small.svg", class: "h-8 block md:hidden text-clementine" %>
    <% end %>

    <p class="text font-bold">
      <span class="hidden md:inline">A guide to NYC curated</span> by <span class="hidden md:inline">the friendly folks at</span> <a href="https://thoughtbot.com" class="underline">thoughtbot</a></span>
    </p>
  </nav>
</header>
